!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title BukBuk.me
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %link{:href => "styles/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "styles/bootstrap-responsive.min.css", :rel => "stylesheet"}/
    %link{:href => "css/preview.css", :rel => "stylesheet"}/
    %link{:href => "http://fonts.googleapis.com/css?family=PT+Sans:400,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "styles/font-awesome.min.css", :rel => "stylesheet"}/
    /[if IE 7]
      <link href="styles/font-awesome-ie7.min.css" rel="stylesheet" />
    /[if IE 8]
      <style type="text/css">
      \.navbar-inner{
      filter:none;
      }
      </style>
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"} BukBuk.me
          .nav-collapse.collapse.navbar-responsive-collapse
            %ul.nav
              %li
                %a{:href => "/home"} Home
              %li
                %a{:href => "/profile"} Profile
              %li
                %a{:href => "/followers"} Followers
              %li
                %a{:href => "/following"} Following
              %form.navbar-form.pull-right
                %input.input-medium.search-query{:type => "text"}/
                %button.btn{:type => "submit", :placeholder => "Search"} Search
          / /.nav-collapse
      / /navbar-inner
      
    
    =yield